{
    "name": "kenjis/codeigniter-doctrine",
    "type": "codeigniter-library",
    "description": "A simple Doctrine integration for CodeIgniter 3.x",
    "keywords": [
        "codeigniter",
        "doctrine"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Kenji Suzuki",
            "homepage": "https://github.com/kenjis/codeigniter-doctrine"
        }
    ],
    "autoload": {
        "classmap": [ "libraries/Doctrine.php" ]
    },
    "require": {
        "php": ">=5.4.0",
        "doctrine/orm": "~2.5",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "codeigniter/framework": "~3.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
